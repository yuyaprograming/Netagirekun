<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".TopicMakeActivity"
    tools:showIn="@layout/activity_topic_make">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/first_box"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/message_topic_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="話題ジャンル："/>

        <EditText
            android:id="@+id/title_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ジャンル" />

    </LinearLayout>

    <Button
        android:id="@+id/topic_make_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:paddingStart="13dp"
        android:paddingEnd="13dp"
        android:textColor="#ffffff"
        android:layout_below="@id/first_box"
        android:layout_centerHorizontal="true"
        android:text="新しい話題を追加する"
        android:background="@drawable/button_state" />

    <Button
        android:id="@+id/topic_make_input_done_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/topic_make_button"
        android:layout_marginTop="10dp"
        android:paddingStart="13dp"
        android:paddingEnd="13dp"
        android:textColor="#ffffff"
        android:layout_centerHorizontal="true"
        android:text="保存する"
        android:background="@drawable/button_save"/>

    <ListView
        android:id="@+id/listView2"
        android:layout_below="@id/topic_make_input_done_button"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</RelativeLayout>